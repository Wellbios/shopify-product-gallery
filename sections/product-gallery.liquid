<main class="main-product-gallery" role="main">
  <section class="product-gallery-section">
   <div class="padding-vertical__global">
    <div class="product-gallery">

      <div class="product-gallery__thumbnails">
        {% for media in product.media %}
          <img
            src="{{ media | image_url: width: 150 }}"
            alt="{{ media.alt | escape }}"
            width="{{ media.preview_image.width }}"
            height="{{ media.preview_image.height }}"
            class="thumbnail-img {% if forloop.first %}active{% endif %}"
            data-full="{{ media | image_url: 'master' }}"
          >
        {% endfor %}
      </div>

      <div class="product-gallery_main-image">
        <div class="product-gallery_slider-container">
          <div class="main-image-wrapper">
            {% if product.featured_media %}
              <img
                src="{{ product.featured_media | image_url: 'master' }}"
                alt="{{ product.featured_media.alt | escape }}"
                width="{{ product.featured_media.preview_image.width }}"
                height="{{ product.featured_media.preview_image.height }}"
                class="main-image"
                id="mainImage"
              >
            {% else %}
              {{ 'product-1' | placeholder_svg_tag: 'main-image placeholder-svg' }}
            {% endif %}
          </div>

          <div class="arrow-navigation">
            <svg
              class="product-gallery_slider-arrows"
              onclick="previousImage()"
              viewBox="0 0 24 24"
              fill="currentColor"
            >
              <path d="M15.41 7.41L14 6l-6 6 6 6 1.41-1.41L10.83 12z" />
            </svg>

            <svg
              class="product-gallery_slider-arrows"
              onclick="nextImage()"
              viewBox="0 0 24 24"
              fill="currentColor"
            >
              <path d="M10 6L8.59 7.41 13.17 12l-4.58 4.59L10 18l6-6z" />
            </svg>
          </div>
        </div>
      </div>

      <div class="product-gallery_product-card-wrapper">
        <div class="product-gallery_product-card">

          <div class="product-gallery_product-card-title-wrapper">
            <h1 class="product-card__header">{{ product.title | escape }}</h1>
            <span class="product-card__detail">{{ product.vendor | escape }}</span>
          </div>

          {%- comment -%} This block handles the product form, variants, and pricing logic {%- endcomment -%}
          {%- form 'product', product -%}
            <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">

            <div class="product-gallery_product-card-price-wrapper">
              {% if product.compare_at_price > product.price %}
                <span class="price-wrapper_old-price">{{ product.compare_at_price | money }}</span>
              {% endif %}
              <div class="price-new-price">
                <span class="product-card__new-price-header is-blue">{{ product.price | money }}
                  <span class="product-card__new-price-header is-small">inkl. MwSt.</span></span>
              </div>
            </div>

            <div class="price-card__availability-status">
              <div class="price-card__availability-status-dot"></div>
              {% if product.available %}
                <span class="price-card__availability-text">Auf Lager, in 2 bis drei Tagen bei dir</span>
              {% else %}
                <span class="price-card__availability-text">Ausverkauft</span>
              {% endif %}
            </div>

            <button
              class="product-card_cta-btn"
              type="submit"
              {% unless product.available %}disabled="disabled"{% endunless %}
            >
              {% if product.available %}
                In den Einkaufswagen
              {% else %}
                Ausverkauft
              {% endif %}
            </button>
          {%- endform -%}
        </div>
      </div>

